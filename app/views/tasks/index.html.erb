<h1 class="main-title"><%= "Welcome to your task manager"%>

<h2 class="task-list"><%= "Here are your tasks:" %></h2>

<ul class="list">
 <% @tasks.each do |task| %>
    <li>
      <%= link_to task.title, task_path(task) %>
    </li>
  <% end %>
</ul>


<%= link_to 'Create New Task', tasks_new_path, class: "btn-new" %>
