<h1 class="main-title"><%= "Welcome to your task manager"%>

<div class="container">
<h2 class="task-list"><strong>Here are your tasks:</strong></h2>

  <ul class="list">
    <% @tasks.each do |task| %>
      <li>
        <%= link_to task.title, task_path(task) %>
      </li>
    <% end %>
  </ul>
</div>


<%= link_to 'Create New Task', tasks_new_path, class: "btn-new" %>
